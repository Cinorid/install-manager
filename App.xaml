<Application x:Class="SilentInstall.App" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" StartupUri="MainWindow.xaml">
    <Application.Resources>
    <Style x:Key="OutputBox" TargetType="{x:Type TextBox}">
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="{x:Type TextBoxBase}">
            <Border Name="Border" CornerRadius="5,5,5,5" Padding="5,5,5,5" BorderThickness="1,1,1,1" Background="#fffffacd" BorderBrush="#ffefefef">
              <ScrollViewer Margin="0" x:Name="PART_ContentHost">
              </ScrollViewer>
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
  </Application.Resources>
</Application>
